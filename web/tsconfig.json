{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@contexts/*": [
        "./contexts/*"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@helpers/*": [
        "./helpers/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@wrappers/*": [
        "./wrappers/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@store/*": [
        "./store/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
