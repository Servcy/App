{
    "extends": "tsconfig/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./app/*"],
            "@services/*": ["./services/*"],
            "@lib/*": ["./lib/*"],
            "@hooks/*": ["./hooks/*"],
            "@contexts/*": ["./contexts/*"],
            "@constants/*": ["./constants/*"],
            "@helpers/*": ["./helpers/*"],
            "@styles/*": ["./styles/*"],
            "@wrappers/*": ["./wrappers/*"],
            "@components/*": ["./components/*"],
            "@store/*": ["./store/*"],
            "@package.json": ["./package.json"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
