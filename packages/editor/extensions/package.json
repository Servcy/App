{
  "name": "@servcy/editor-extensions",
  "version": "0.16.0",
  "description": "Package that powers Servcy's Editor with extensions",
  "private": true,
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup --minify",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit"
  },
  "peerDependencies": {
    "next": "12.3.2",
    "next-nprogress-bar": "^2.3.4",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "18.2.0"
  },
  "dependencies": {
    "@servcy/editor-core": "*",
    "@tiptap/core": "^2.1.13",
    "@tiptap/pm": "^2.5.1",
    "@tiptap/react": "^2.1.13",
    "@tiptap/suggestion": "^2.1.13",
    "eslint-config-next": "13.2.4",
    "lucide-react": "^0.294.0",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@types/node": "18.15.3",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "eslint": "8.36.0",
    "postcss": "^8.4.31",
    "tailwind-config-custom": "*",
    "tsconfig": "*",
    "tsup": "^7.2.0",
    "typescript": "4.9.5"
  },
  "keywords": [
    "editor",
    "rich-text",
    "markdown",
    "nextjs",
    "react"
  ]
}
